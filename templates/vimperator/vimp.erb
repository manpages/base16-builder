<%
# Vimperator CSS Template
# Jonn Mostovoy (http://j.memorici.de)

%>style htt* <<EOM
/* Firefox Scrollbars */
scrollbar {opacity: .25 !important;}

/* Base */
*, ::before, ::after {
color: #<%= @base["05"]["hex"] %> !important; 
border-color: #<%= @base["01"]["hex"] %> !important;
outline-color: #<%= @base["01"]["hex"] %> !important;
text-shadow: none !important;
box-shadow: none !important;
-moz-box-shadow: none !important;
background-color: transparent !important;
}

html * {
color: inherit !important;
}

p::first-letter,
h1::first-letter,
h2::first-letter,
p::first-line {

color: inherit !important; 
background: none !important;
}

/* :: Give solid BG :: */

/* element */
b,i,u,strong{color:#<%= @base["0B"]["hex"] %>}


html, 
body,
li ul,
ul li,
table,
header,
article,
section,
nav,
menu,
aside,

/* common */

[class*="nav"],
[class*="open"],
[id*="ropdown"], /*dropdown*/
[class*="ropdown"], 
div[class*="menu"],
[class*="tooltip"],
div[class*="popup"], 
div[id*="popup"],

/* Notes, details, etc.  Maybe useful */
div[id*="detail"],div[class*="detail"],
div[class*="note"], span[class*="note"],
div[class*="description"],

/* Also common */
div[class*="content"], div[class*="container"],

/* Popup divs that use visibility: hidden and display: none */
div[style*="display: block"], 
div[style*="visibility: visible"] {
background-color: #<%= @base["00"]["hex"] %> !important
}



/*: No BG :*/
*:not(:empty):not(span):not([class="html5-volume-slider html5-draggable"]):not([class="html5-player-chrome html5-stop-propagation"]), *::before, *::after,
td:empty, p:empty, div:empty:not([role]):not([style*="flashblock"]):not([class^="html5"]):not([class*="noscriptPlaceholder"]) {
background-image: none !important;
}

/*: Filter non-icons :*/
span:not(:empty):not([class*="icon"]):not([id*="icon"]):not([class*="star"]):not([id*="star"]):not([id*="rating"]):not([class*="rating"]):not([class*="prite"]) {
background-image: none !important;
text-indent: 0 !important;
}

/*: Image opacity :*/
img, svg             {opacity: .75 !important;}
img:hover, svg:hover {opacity: 1 !important;}

/* Highlight */
::-moz-selection {
background-color: #<%= @base["06"]["hex"] %> !important;
color: #<%= @base["02"]["hex"] %> !important;
}

/* ::: anchor/links ::: */

a {
color: #<%= @base["0C"]["hex"] %> !important; 
background-color: #<%= @base["00"]["hex"] %> !important;
opacity: 1 !important; 
text-indent: 0 !important;
}

a:link         {color: #<%= @base["0D"]["hex"] %> !important;} /* hyperlink */
a:visited      {color: #<%= @base["0E"]["hex"] %> !important;}
a:hover        {color: #<%= @base["0A"]["hex"] %> !important; background-color: #<%= @base["01"]["hex"] %> !important;}
a:active       {color: #<%= @base["09"]["hex"] %> !important;}

/* "Top level" div */

body > div {background-color: inherit !important;}

/* :::::: Text Presentation :::::: */

summary, details                   {background-color: inherit !important}
kbd, time, label, .date            {color: #<%= @base["0B"]["hex"] %> !important}
acronym, abbr                      {border-bottom: 1px dotted !important; cursor: help !important;}
mark,code,pre,samp,blockquote      {background-color: #<%= @base["01"]["hex"] %> !important}


/* :::::: Headings :::::: */

h1,h2,h3,h4,h5,h6  { 

background-image: none !important;
border-radius: 5px !important;
-moz-border-radius: 5px !important;
-webkit-border-radius: 5px !important; 
text-indent: 0 !important;
}

h1,h2,h3,h4,h5,h6 {background-color: #<%= @base["01"]["hex"] %> !important}


h1,h2{color:#<%= @base["0B"]["hex"] %>!important}
h3,h4{color:#<%= @base["0A"]["hex"] %>!important}
h5,h6{color:#<%= @base["09"]["hex"] %>!important}

/* :::::: Tables, cells :::::: */

table table {background: #<%= @base["01"]["hex"] %> !important;}
th, caption {background: #<%= @base["00"]["hex"] %> !important;}

/* ::: Inputs, textareas ::: */

input, textarea, button,
select,option,optgroup{

color: #<%= @base["02"]["hex"] %> !important;
background: none #<%= @base["01"]["hex"] %> !important;
-moz-appearance: none !important; 
-webkit-appearance: none !important;
}

input,
textarea, 
button {
border-color: #<%= @base["02"]["hex"] %> !important; 
border-width: 1px !important;
}

/* :::::: Button styling :::::: */

input[type="button"],
input[type="submit"],
input[type="reset"],
button {
background: #<%= @base["01"]["hex"] %> !important;
}

input[type="button"]:hover,
input[type="submit"]:hover,
input[type="reset"]:hover,
button:hover {
color: #<%= @base["02"]["hex"] %> !important;
background: #<%= @base["06"]["hex"] %> !important;
}

input[type="image"] {opacity: .85 !important}
input[type="image"]:hover {opacity: .95 !important}

/* Lightbox fix */
html [id*="lightbox"] * {background-color: transparent !important;}
html [id*="lightbox"] img {opacity: 1 !important;}

/* Youtube Annotation */
#movie_player-html5 .annotation {background: #<%= @base["01"]["hex"] %> !important}

/* Mozilla addons shrink/expand sections */
.expando a {background: none transparent  !important;}

}


@-moz-document url(about:newtab) {

window {
background: #<%= @base["00"]["hex"] %> !important;
}

#newtab-scrollbox {
background: transparent none !important;
}

.newtab-title {
background-color: rgba(0,43,54,1) !important; 
color: #<%= @base["05"]["hex"] %> !important;
}

}

@-moz-document url(chrome://browser/content/browser.xul) {

/* Browser Background */
browser[type="content-primary"] {
background-color: #<%= @base["00"]["hex"] %> !important;
} 

}
EOM
